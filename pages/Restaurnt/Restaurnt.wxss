/* pages/Restaurnt/Restaurnt.wxss */
.container{
  background-color: #9BCFBB;
}
.listitem{
  display: flex;
  flex-direction: row;
  width: 730rpx;
  height: 300rpx;
  margin-top: 30rpx;
  border-radius: 30rpx;
  background-color: #7FB174;
  border: 4px solid #689C97;
  font-family: Arial, Helvetica, sans-serif;
}
.panel-image{
display: flex;
justify-content: center;
align-items: center;
width: 220rpx;
height: 300rpx;
}
.imageitem{
width: 200rpx;
height: 200rpx;
border-radius: 20rpx;
}
.panel-right{
display: flex;
flex-direction: column;
margin-left: 30rpx;
width: 500rpx;
height: 300rpx;
}
.panel-title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-weight: bold;
margin-top: 40rpx;
height: 60rpx;
width: 500rpx;
}
.panel-text{
color: #072A24;
height: 200rpx;
width: 500rpx;
}